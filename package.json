{
  "name": "fluffywaffles.io",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -f index.html main.css",
    "build": "npm run clean && ./node_modules/pug-cli/index.js index.pug && ./node_modules/stylus/bin/stylus main.styl",
    "dev:pug": "pug -w *.pug &",
    "dev:stylus": "stylus -w *.styl &",
    "dev:serve": "browser-sync start --config bs-config.js",
    "develop": "npm run dev:pug && npm run dev:stylus && npm run dev:serve",
    "start": "npm run develop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skorlir/fluffywaffles.git"
  },
  "author": "@skorlir",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/skorlir/fluffywaffles/issues"
  },
  "homepage": "https://github.com/skorlir/fluffywaffles#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
