{
  "name": "fluffywaffles.io",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -f index.html main.css",
    "build": "npm run clean && ./node_modules/pug-cli/index.js index.pug && ./node_modules/stylus/bin/stylus main.styl",
    "dev:pug": "pug -w *.pug &",
    "dev:styl": "stylus -w *.styl &",
    "dev:srv": "browser-sync start --config bs-config.js",
    "develop": "npm run dev:pug && npm run dev:styl && npm run dev:srv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skorlir/fluffywaffles.git"
  },
  "author": "@skorlir",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/skorlir/fluffywaffles/issues"
  },
  "homepage": "https://github.com/skorlir/fluffywaffles#readme",
  "devDependencies": {
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
