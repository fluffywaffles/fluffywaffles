{
  "name": "fluffywaffles.io",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -f index.html main.css",
    "pug": "pug -b $(git rev-parse --show-toplevel) $npm_package_pug_source",
    "stylus": "stylus $npm_package_stylus_source",
    "build:assets": "cp -r $npm_package_assets_source $npm_package_build_directory",
    "build:pug": "npm run pug -- -o $npm_package_build_directory",
    "build:stylus": "npm run stylus -- -o $npm_package_build_directory",
    "build": "npm run clean && npm run build:pug & npm run build:stylus & npm run build:assets & wait $(jobs -p)",
    "develop:pug": "npm run pug -- -w &",
    "develop:stylus": "npm run stylus -- -w &",
    "develop:serve": "browser-sync start --config bs-config.js",
    "develop": "npm run develop:pug && npm run develop:stylus && npm run develop:serve",
    "start": "npm run develop"
  },
  "pug": {
    "source": "*.pug words projects sounds "
  },
  "stylus": {
    "source": "main.styl"
  },
  "assets": {
    "source": "audio fonts images"
  },
  "build": {
    "directory": "dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skorlir/fluffywaffles.git"
  },
  "author": "@skorlir",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/skorlir/fluffywaffles/issues"
  },
  "homepage": "https://github.com/skorlir/fluffywaffles#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
