html, body
  margin 0 auto
  min-height 100%

header
  padding-top 50px
  display flex
  justify-content center
  flex-wrap wrap

  h1
    text-align center
    flex 1 0 100%

waffle_yellow=#ffff00
waffle_dip=#ffe600
waffle_edge=#ffd200
waffle_font=#ffbe00

section.fluffywaffles-logo
  width 200px
  height calc(150px + 150px - 40px)
  position relative

  object.logo
    background url('./fluffywaffles-notext-lt.png')
    background-size contain
    background-repeat no-repeat
    position relative
    z-index 2
    height 150px

  svg.drip-animation
    width 100%
    height 150px // HACK(jordan): this is hard-coded
    position absolute
    z-index 1
    left 20px
    top 110px
